// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*\\[webpack-cli\\] Compiler starting",
                    "endsPattern": "^webpack \\d+\\.\\d+\\.\\d+ compiled"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "unittest",
            "problemMatcher": [],
            "label": "npm: unittest",
            "detail": "node out/test/testRunner.js -c jasmine.unittest.json",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}